             xmlns:local="using:Porrey.WaterSensor"
             RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <x:String x:Key="AppName">MCP3008 Water Sensor</x:String>
			
            <!-- ***            -->
            <!-- *** Converters -->
            <!-- ***            -->            
            <local:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></local:BooleanToVisibilityConverter>
