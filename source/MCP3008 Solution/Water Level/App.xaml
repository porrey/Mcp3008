<Application x:Class="Porrey.WaterLevel.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="using:Porrey.WaterLevel"
             xmlns:common="using:Porrey.Common"
             RequestedTheme="Dark">
    <Application.Resources>
        <ResourceDictionary>
            <x:String x:Key="AppName">Water Level</x:String>
			
            <!-- ***            -->
            <!-- *** Converters -->
            <!-- ***            -->            
            <common:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"></common:BooleanToVisibilityConverter>
            <common:NotBooleanToVisibilityConverter x:Key="NotBooleanToVisibilityConverter"></common:NotBooleanToVisibilityConverter>
            <common:NotBooleanConverter x:Key="NotBooleanConverter"></common:NotBooleanConverter>
        </ResourceDictionary>
    </Application.Resources>
</Application>
